                </li>
                <li class="nav-item">
                    <a is-active-route asp-area="Account" asp-controller="Wallets" class="nav-link">
                        <i class="fas fa-solid fa-wallet"></i>
                        <p>@localizer["Wallet"]</p>
                    </a>
