@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> localizer
<aside id="sideBar" class="main-sidebar sidebar-dark-primary">
    <a href="/" class="brand-link clearfix">
        @* <img src="~/images/logo-transparent.png" id="brand-logo" alt="logo" class="brand-image img-circle"
        style="opacity: .8"> *@
        <div class="logo-wrap pr-4">
            <img src="~/images/logo-v-dark.png" alt="logo" class="brand-image w-100">
        </div>
        <div class="float-right d-none d-sm-inline">
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="darkSwitch">
                <label class="custom-control-label" style="font-weight:400" for="darkSwitch">
                    <i class="fas fa-solid fa-moon" style="position:relative;top:3px;"></i>
                </label>
            </div>
        </div>
    </a>
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            @localizer["Dashboard"]
                            @* <span class="right badge badge-danger">@localizer["New"]</span> *@
                        </p>
                    </a>
                </li>
                @if (User.IsInRole("SuperAdmin"))
                {
                    @* <li class="nav-header">@localizer["Admin"]</li> *@
                    <li class="nav-item">
                        <a is-active-route asp-area="Admin" asp-controller="User" class="nav-link">
                            <i class="fas fa-user"></i>
                            <p>@localizer["Users"]</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a is-active-route asp-area="Admin" asp-controller="Role" class="nav-link">
                            <i class="fas fa-user-tag"></i>
                            <p>@localizer["Roles"]</p>
                        </a>
                    </li>
                }

                @* <li class="nav-header">@localizer["Account"]</li> *@
